let mapo f o =
  match o with
  | None -> None
  | Some x -> Some (f x)

let mapbetter f o1 o2 =
  match (o1, o2) with
  | (None, x) -> x
  | (x , None) -> x
  | (Some x, Some y) -> Some (f x y)

let merge node x y =
  mapbetter (fun x y -> if x < y then x else y) x y

let edge_failed edge =
  match edge with
  | 0~1 -> fail01
  | 1~0 -> fail01
  | 0~2 -> fail02
  | 2~0 -> fail02
  | 1~2 -> fail12
  | 2~1 -> fail12
  | 1~3 -> fail13
  | 3~1 -> fail13
  | _ -> fail23


let trans edge x =
  if edge_failed edge then None
  else mapo (fun x -> x + 1) x

