let mapo f o =
  match o with
  | None -> None
  | Some x -> Some (f x)

let mapbetter f o1 o2 =
  match (o1, o2) with
  | (None, x) -> x
  | (x , None) -> x
  | (Some x, Some y) -> Some (f x y)

let merge node x y =
  mapbetter (fun x y -> if x < y then x else y) x y

let edge_failed edge =
  match edge with
  | 0n-1n -> fail[(0,1)] || fail[(1,0)]
  | 1n-0n -> fail[(1,0)] || fail[(0,1)]
  | 0n-2n -> fail[(0,2)] || fail[(2,0)]
  | 2n-0n -> fail[(2,0)] || fail[(0,2)]
  | 1n-2n -> fail[(1,2)] || fail[(2,1)]
  | 2n-1n -> fail[(2,1)] || fail[(1,2)]
  | 1n-3n -> fail[(1,3)] || fail[(3,1)]
  | 3n-1n -> fail[(3,1)] || fail[(1,3)]
  | 2n-3n -> fail[(2,3)] || fail[(3,2)]
  | 3n-2n -> fail[(3,2)] || fail[(2,3)]

let trans edge x =
  if edge_failed edge then None
  else mapo (fun x -> x + 1) x

let init node =
  match node with
  | 0n -> Some 0
  | _ -> None

let assert node x =
  match x with
  | None -> false
  | _ -> true
