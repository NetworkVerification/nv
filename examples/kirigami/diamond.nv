(* vim: set syntax=ocaml: *)
let mapo f o =
  match o with
  | None -> None
  | Some x -> Some (f x)

let mapbetter f o1 o2 =
  match (o1, o2) with
  | (None, x) -> x
  | (x, None) -> x
  | (Some x, Some y) -> Some (f x y)

let isSome o =
  match o with
  | Some _ -> true
  | None -> false

type attribute = option[int]

let nodes = 4

(* Diamond partial mesh network *)
let edges = {
 0=1;
