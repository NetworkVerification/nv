}

let partition node = if node = 3n then 1u8 else 0u8

let interface edge = match edge with
  | 1~3 -> Some (Some 4)
  | 3~1 -> Some (Some 7)
  | 2~3 -> Some (Some 2)
  | 3~2 -> Some (Some 3)
  | _ -> None

let merge node x y =
  mapbetter (fun x y -> if x < y then x else y) x y

let weight edge =
  match edge with
  | 0~1 -> 1
  | 1~2 -> 1
  | 2~3 -> 1
  | _ -> 3

let trans edge x =
  mapo (fun x -> x + (weight edge)) x

let init node =
  match node with
  | 0n -> Some 0
  | _ -> None
