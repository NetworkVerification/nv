      if n = 2147483647u31 then None else Some (n +u31 1u31)

let merge n x1 x2 =
  mapbetter (fun n1 n2 -> if n1 <u31 n2 then n1 else n2) x1 x2

let init n =
  match n with
  | 0n -> Some 0u31
  | _ -> None
