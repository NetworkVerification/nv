include "utils.nv"

type attribute = option[int]

let nodes = 4

let edges = {
 0=1;
 0=2;
 1=2;
 1=3;
 2=3;
}

let merge node x y =
  mapbetter (fun x y -> if x < y then x else y) x y

let weight edge =
  match edge with
  | 0~1 -> 1
  | 1~2 -> 1
  | _ -> 3

let trans edge x =
  mapo (fun x -> x + (weight edge)) x

let init node =
  match node with
  | 0n -> Some 0
  | _ -> None

let sol = solution {init = init; trans = trans; merge = merge}
