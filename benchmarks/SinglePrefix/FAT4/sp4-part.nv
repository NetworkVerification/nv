(* vim: set syntax=ocaml: *)
(* Partitioned version of sp4.nv *)
include "../../../examples/utils.nv"
include "sp4.nv"

(* destination: node 10 *)
(* 70.0.19.0/24u5 or (1174409984, 24u5)*)
(* 10's pod includes itself and 6, 8 and 2 *)

(* all true: 11 and 12 (in pod with 13 and 14) fail P assert *)

(* split along spine-pod edges *)
let partition node = match node with
  | 1n -> 0u8
  | 3n -> 0u8
  | 4n -> 0u8
  | 7n -> 0u8
  | _ -> 1u8

let interface edge =
  let any x = true in
  let nothingButBgp x =
    match x with
    | {connected = c; static = s; ospf = o; _} ->
      (* only have bgp routes *)
      c = None && s = None && o = None
  in
  let hasOnlyBgp x =
    match x with
    | {connected = c; static = s; ospf = o; bgp = b; selected = sel} ->
      (* connected, static and ospf aren't transferred,
       * so transfer won't maintain their values
      *)
      c = None && s = None && o = None && isSome b
  in
  match edge with
  (* 1 edges - 1 gets the route to 10 via 8 *)
  | 1~8 -> nothingButBgp
  | 1~14 -> hasOnlyBgp
  | 1~16 -> hasOnlyBgp
  | 1~18 -> hasOnlyBgp
  | 8~1 -> hasOnlyBgp
  | 14~1 -> nothingButBgp
  | 16~1 -> nothingButBgp
  | 18~1 -> nothingButBgp
  (* 3 edges - 3 gets the route to 10 via 8 *)
  | 3~8 -> nothingButBgp
  | 3~14 -> hasOnlyBgp
  | 3~16 -> hasOnlyBgp
  | 3~18 -> hasOnlyBgp
  | 8~3 -> hasOnlyBgp
  | 14~3 -> nothingButBgp
  | 16~3 -> nothingButBgp
  | 18~3 -> nothingButBgp
  (* 4 edges - 4 gets the route to 10 via 6 *)
  | 4~6 -> nothingButBgp
  | 4~13 -> hasOnlyBgp
  | 4~15 -> hasOnlyBgp
  | 4~17 -> hasOnlyBgp
  | 6~4 -> hasOnlyBgp
  | 13~4 -> nothingButBgp
  | 15~4 -> nothingButBgp
  | 17~4 -> nothingButBgp
  (* 7 edges - 7 gets the route to 10 via 6 *)
  | 7~6 -> nothingButBgp
  | 7~13 -> hasOnlyBgp
  | 7~15 -> hasOnlyBgp
  | 7~17 -> hasOnlyBgp
  | 6~7 -> hasOnlyBgp
  | 13~7 -> nothingButBgp
  | 15~7 -> nothingButBgp
  | 17~7 -> nothingButBgp
  | _ -> None
